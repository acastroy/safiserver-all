	<bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>environment.properties</value>
				<value>common.properties</value>
			</list>
		</property>
	</bean>
	
	<bean id="scriptScopeFactory" class="com.safi.asterisk.scripting.RhinoScriptScopeFactory" />
	
	<bean id="handlerScriptFactory" class="com.safi.asterisk.scripting.RhinoHandlerScriptFactory" />
	
	<bean id="scriptingEnvironment" class="com.safi.asterisk.scripting.RhinoHandlerScriptEnvironment" >
		<property name="handlerScriptFactory" ref="handlerScriptFactory" />
		<property name="scriptScopeFactory" ref="scriptScopeFactory" />
	</bean>
	
	<bean id="handlerEngine" class="com.safi.asterisk.handler.HandlerEngine">
		<property name="hostName" value="${host.name}"/>
		<property name="password" value="${user.password}" />
		<property name="userName" value="${user.name}" />
		<property name="scriptingEnvironment" ref="scriptingEnvironment" />
	</bean>
	
</beans>
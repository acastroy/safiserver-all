  <bean id="safletDispatcher" class="com.safi.asterisk.handler.FileBackedSafletDispatch" />
  
  <bean id="safletConnectionManager" class="com.safi.asterisk.handler.FileBackedConnectionManager" depends-on="safletDispatcher">
    <property name="dispatcher" ref="safletDispatcher"/>
  </bean>
  
	<bean id="handlerEngine"
    class="com.safi.asterisk.handler.HandlerEngine" >
    <property name="dispatcher" ref="safletDispatcher"/>
    <property name="connectionManager" ref="safletConnectionManager"/>
    <property name="hostName" value="${host.name}" />
    <property name="password" value="${user.password}" />
    <property name="userName" value="${user.name}" />
    <property name="fastAgiPort" value="${port}" />
    <property name="fastAgiPoolsize" value="${poolSize}" />
    <property name="fastAgiMaxPoolsize" value="${maximumPoolSize}" />
    <property name="defaultHandlerDirectory"
      value="${default.handler.dir}" />
    <property name="serverBindAddr" value="${bind.addr}" />
    <property name="agiServer" ref="agiServer" />
    <property name="serverMode" value="false" />
    <property name="testing" value="false" />
    

    <!--<property name="useBlocking" value="${blocking.server}" />
      <property name="scriptingEnvironment" ref="scriptingEnvironment" />-->
  </bean>
	
</beans>